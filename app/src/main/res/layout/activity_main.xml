<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.mayck.learnenglish.MainActivity"
    android:background="@drawable/fondo1">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En la Escuela / At School"
        android:textSize="15dp"
        android:textColor="#fff"
        android:onClick="escuela"
        android:background="#dd2e95d5"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/btotropais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En Otro Pais / In Another Country "
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="#dd2e95d5"
        android:onClick="pais"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/frases"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saludo"
        android:text="Saludo y Presentacion /
      Greeting and Presentation"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="#dd2e95d5"
        android:layout_above="@+id/btotropais"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Ante una Emergencia / In an Emergency"
        android:textColor="#fff"
        android:onClick="emerge"
        android:background="#dd2e95d5"
        android:textSize="15dp"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/frases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:onClick="frases"
        android:layout_row="1"
        android:text="Frases Cotidianas / Everday Frases"
        android:textColor="#ffff"
        android:background="#dd2e95d5"
        android:textSize="15dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/btotropais"
        android:layout_alignStart="@+id/btotropais" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="309dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Aprendiendo
        Ingles"
        android:textColor="#eaecf2"
        android:textSize="40dp"
        android:textStyle="bold|italic|normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />
</RelativeLayout>
