<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    tools:context="com.example.mayck.learnenglish.enotropais">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imgsaludo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/fras"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/linearLayout5"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp">

        <Button
            android:id="@+id/button30"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="6"
            android:layout_row="6"
            android:onClick="a1"
            android:text="Hi"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/button41"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="a2"
            android:text="Buenos Dias" />

        <Button
            android:id="@+id/button27"
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:onClick="a3"
            android:text="Buenas tardes" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="19dp"
        android:weightSum="1"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/bthablasEspanol"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:onClick="a4"
            android:layout_row="2"
            android:text="buenas noches"
            android:layout_weight="0.49" />

        <Button
            android:id="@+id/btmuybien"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_column="6"
            android:layout_row="6"
            android:layout_weight="0.08"
            android:onClick="a5"
            android:text="¿cual es tu nombre?" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:weightSum="1"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btdondeestaelbus"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:onClick="a6"
            android:layout_row="2"
            android:text="Mi nombre es"
            android:layout_weight="0.12" />

        <Button
            android:id="@+id/btdondepuedotomartaxi"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="0.12"
            android:onClick="a7"
            android:text="gusto en conocerte" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="14dp"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button2"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="0.35"
            android:onClick="a8"
            android:text="adios" />

        <Button
            android:id="@+id/button"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="0.69"
            android:onClick="a9"
            android:text="cuantos años tienes" />
    </LinearLayout>
</RelativeLayout>
